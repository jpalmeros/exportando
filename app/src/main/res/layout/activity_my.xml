<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/Fondo"
    tools:context=".MainFullscreenActivity"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="top"
        android:layout_weight="1">

            <Button
                android:id="@+id/btn_login_QR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textSize="25dp"
                android:textStyle="bold"


                android:layout_gravity="bottom"
                android:background="@color/Boton"
                android:textColor="@color/Texto_1"
                android:text="@string/ingresaconQR"/>

            <Button android:id="@+id/btn_login_Manual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ingresamanual"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_gravity="bottom"
                android:background="@color/Boton"
                android:textColor="@color/Texto_1" />

            <EditText android:id="@+id/login_nick"
                android:layout_weight="0.15"
                android:layout_margin="5dp"
                android:textSize="25dp"
                android:textStyle="normal"

                android:layout_height="wrap_content"
                android:text="@string/login_button"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:background="#fff8fff7"
                android:textColor="#ff000000"/>

            <EditText android:id="@+id/login_password"
                android:inputType="textPassword"
                android:layout_height="wrap_content"
                android:text="@string/login_button"
                android:layout_width="match_parent"
                android:textColor="#000"
                android:layout_gravity="bottom"
                android:background="#fff"

                android:layout_weight="0.15"
                android:layout_margin="5dp"
                android:textSize="25dp"
                android:textStyle="normal"
                />


            <Button android:id="@+id/exit_button"
                android:layout_margin="5dp"
                android:textSize="25dp"
                android:textStyle="bold"

                android:layout_height="wrap_content"
                android:text="@string/exit_button"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:background="#ff54769a"
                android:textColor="#ccc"
                />

    </LinearLayout>

</RelativeLayout>
