<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        android:textColor="#33b5e5"
        android:textStyle="bold"
        android:textSize="50sp"
        android:gravity="center"
        android:text="@string/app_name" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <RelativeLayout android:id="@+id/fullscreen_content_controls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_horizontal"
            android:background="#000"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/button_QRconLib"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                android:background="#ff1f72ff"
                android:textColor="#ff000000"
                android:layout_marginBottom="150dp"
                android:text="Leer QR con libreria" />

            <Button
                android:id="@+id/button_get_qr_code"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                android:background="#ff1f72ff"
                android:textColor="#ff000000"
                android:layout_marginBottom="100dp"
                android:text="login QR" />

            <TextView
                android:id="@+id/text_view_qr_content"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                android:textColor="#ff01a200"
                android:layout_marginBottom="200dp"
                android:text="hola" />

            <Button android:id="@+id/login_button"
                android:layout_height="wrap_content"
                android:text="@string/login_button"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                android:background="#ff1f72ff"
                android:textColor="#ff000000"
                android:layout_marginBottom="50dp"

                />

            <EditText android:id="@+id/login_nick"
                android:layout_height="wrap_content"
                android:text="@string/login_button"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_above="@+id/login_password"
                android:background="#ff8c8eff"
                android:textColor="#ccc"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                />

            <EditText android:id="@+id/login_password"
                android:inputType="textPassword"
                android:layout_height="wrap_content"
                android:text="@string/login_button"
                android:layout_width="match_parent"
                android:textColor="#ff000000"
                android:layout_gravity="bottom"
                android:layout_above="@+id/exit_button"
                android:layout_marginBottom="10dp"
                android:background="#ffffffff"
                android:visibility="gone"
                />


            <Button android:id="@+id/exit_button"
                android:layout_height="wrap_content"
                android:text="@string/exit_button"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:background="#ff54769a"
                android:textColor="#ccc"
                />

        </RelativeLayout>
    </FrameLayout>

</FrameLayout>
